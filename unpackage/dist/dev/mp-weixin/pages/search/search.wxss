.search-container .search-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-color: #eeeeee;
  position: relative;
}
.search-container .search-box .searchIcon {
  font-size: 24rpx;
  position: absolute;
  left: 35rpx;
}
.search-container .search-box input {
  padding: 0 75rpx;
  background-color: #fff;
  height: 80rpx;
  width: 430rpx;
}
.search-container .search-box button {
  font-size: 35rpx;
  text-align: center;
  position: absolute;
  background-color: #eeeeee;
  right: 10rpx;
}
.search-container .history-box {
  padding: 25rpx 20rpx 0 20rpx;
}
.search-container .history-box .top {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.search-container .history-box .items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  /* 允许换行 */
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  margin-top: 30rpx;
}
.search-container .history-box .items .item {
  background-color: #ddd;
  padding: 15rpx 20rpx;
  margin-right: 30rpx;
  margin-bottom: 15rpx;
}

